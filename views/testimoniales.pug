extends ./layout/index

block contenido

	main.container.mt-5
		h1.text-center.mt-5= pagina
		// p= JSON.stringify(testimoniales)

		blockquote.text-center Lee sobre nuestros clientes y sus experiencias
		include ./layout/bloque_testimoniales

		.row
			.col-md-12
				h2.d-block.w-100.text-center Agrega tu testimonio

				if(errores)
					each error in errores
						.alert.col.alert-danger.text-center= error.mensaje

			.row.justify-content-center.col
				.col-md-8
					form(action="/testimoniales", method="POST")
						.form-group
							label(for="nombre") Nombre
							input#nombre(type="text", name="nombre", placeholder="Tu Nombre", value= nombre, class="form-control")
						.form-group
							label(for="email") Email
							input#email(type="text", name="email", placeholder="Correo Electr√≥nico", value= email, class="form-control")
						.form-group
							label(for="mensaje") Mensaje
							textarea#mensaje(name="mensaje", placeholder="Tu testimonio", class="form-control", rows=3)= mensaje

						input.btn.btn-success.btn-block(type="submit")

